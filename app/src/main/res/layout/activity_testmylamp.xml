<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:gravity="center"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/TestMyLampToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:navigationIcon="@drawable/baseline_arrow_back_black_18dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardElevation="10dp"
        >
        <ImageButton
            android:id="@+id/emoji_imagebutton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="white"
            android:padding="70dp"
            android:stateListAnimator="@anim/lift_on_touch"
            app:srcCompat="@drawable/happiness" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardElevation="10dp"
        >

        <ImageButton
            android:id="@+id/palette_imagebutton"
            android:layout_gravity="center"
            android:stateListAnimator="@anim/lift_on_touch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="white"
            android:padding="70dp"
            app:srcCompat="@drawable/paint_palette" />

    </android.support.v7.widget.CardView>


</LinearLayout>