<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.polaris_2019">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity"
            android:parentActivityName=".activity.LoginActivity"/>
        <activity android:name=".activity.LoginActivity"
            android:parentActivityName=".activity.ConnectMyLampActivity"/>
        <activity android:name=".activity.TestMyLampActivity"
            android:parentActivityName=".activity.testORpairActivity"/>
        <activity android:name="activity.ConnectAnotherActivity"
            android:parentActivityName=".activity.testORpairActivity"/>
        <activity android:name="activity.ChatActivity"
            android:parentActivityName=".activity.ConnectAnotherActivity"/>
        <activity android:name="activity.TestUsingPalette"
            android:parentActivityName=".activity.TestMyLampActivity"/>
        <activity android:name="activity.TestUsingEmoji"
            android:parentActivityName=".activity.TestMyLampActivity"/>
    </application>

</manifest>